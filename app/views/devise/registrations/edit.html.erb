<div class="user-container">

    <div class="edit-tabs">
        <div class="tabs">
          <ul>
            <li class="active"><%= link_to("アカウント編集", edit_user_registration_path(@user)) %></li>
            <li><%= link_to("プロフィール編集", users_profile_path(@user)) %></li>
          </ul>
        </div>
    </div>
    
  <div class="user-view">
        <h2>アカウント編集</h2>
    <div class="form-view">
      <div class="form-box">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        
        <div class="field">
          <%= f.label :name,"名前" %>
          <%= f.text_field :name, autofocus: true %>
        </div>

        <div class="field">
          <%= f.label :email,"メールアドレス" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password %> <i>（変更する場合のみ入力）</i><br />
          <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> 文字以上</em>
        <% end %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <i>（変更にはパスワードが必要です）</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password" %>
        </div>

        <div class="submitbtn">
          <%= f.submit "更新" %>
        </div>
      <% end %>
      <br /><div style="text-align: right;"><%= link_to "戻る", :back, class:"actions" %></div>
    </div>
    
    <div class="account-delete submitbtn">
      <h4>アカウント削除</h4>
      <p>気に入りませんでしたか？ <%= button_to "アカウント削除", registration_path(resource_name), data: { confirm: "本当に良いですか？" }, method: :delete %></p>
    </div>
</div>
