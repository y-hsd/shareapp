<div class="reservation-container">
  <div class="reservation-view">
    <p class="notice"><%= notice %></p>
    <h2>予約確認</h2>
    <div class="form-view">
      <div class="form-box">
        <h3>¥<%=@room.price%>/日</h3>

      <%= form_with model: [@room, @reservation] do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.hidden_field :guests, value: @reservation.guests %>
        <%= f.hidden_field :total_days, value: @reservation.total_days %>
        <%= f.hidden_field :total_price, value: @reservation.total_price %>

        <div class="field">
          <%= f.label :start_date,"チェックイン" %>
          <%= f.date_field :start_date, value: @start_date, :readonly => true %>
        </div>

        <div class="field">
          <%= f.label :end_date,"チェックアウト" %>
          <%= f.date_field :end_date, value: @end_date, :readonly => true %>
        </div>

        <h4>使用日数：<%=@reservation.total_days%>日</h4>
        <h4>人数：<%=@reservation.guests%>人</h4>

        <div class="field">
          <%= f.label :total_price, "合計金額" %>
          <%= f.number_field :guests, value: @reservation.total_price, :readonly => true %>
        <div class="submitbtn">
          <%= f.submit '送信する' %>
        </div>
      <% end %>

      <%= form_with url: room_path(@room), method: :get do |f| %>
        <%= f.hidden_field :start_date, value: @start_date %>
        <%= f.hidden_field :end_date, value: @end_date %>
        <%= f.hidden_field :guests, value: @guests %>
        <div class="submitbtn">
        <%= f.submit '入力画面に戻る' %>
        </div>
      <% end %>
    </div>
  </div>
</div>